<Window x:Class="VendasWpf.Views.frmPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendasWpf.Views"
        mc:Ignorable="d"
        Title="VendasWPF" Height="450" Width="822" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" FontFamily="Georgia" Closing="Window_Closing">
    <Grid>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Left" Height="25px" Width="822px" Background="DarkGray" >
            <MenuItem Header="_Arquivo">
                <MenuItem x:Name="menusair" Header="Sair" Click="menusair_Click"/>
            </MenuItem>
            <MenuItem Header="_Cadastrar">
                <MenuItem x:Name="menuCadastrarProduto" Header="_Produto" Click="menuCadastrarProduto_Click"/>
            </MenuItem>
            <MenuItem Header="_Sobre">
                <MenuItem x:Name="Equipe" Header="Equipe"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
